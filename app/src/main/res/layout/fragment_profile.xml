<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layoutHead"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#5CC09F">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="90dp"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_boy" />

            <EditText
                android:id="@+id/edit_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_view"
                android:layout_centerHorizontal="true"
                android:enabled="true"
                android:hint="Enter name"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textColor="@color/white"
                tools:text="shakhzod" />
            <ProgressBar
                android:id="@+id/progressbar_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_below="@id/layoutHead"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:focusable="true"
                android:layout_gravity="top"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="16dp"
                tools:text="shakhzod@gmail.com"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/text_not_verified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="#DA1919"
                android:gravity="end"
                android:visibility="invisible"
                android:layout_marginBottom="10dp"
                android:text="Not Verified (Click to Verify)"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/text_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:fontFamily="?selectableItemBackground"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:focusable="true"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="16dp"
                tools:text="+9989 99 670 03 25"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/text_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_point"
                android:drawablePadding="16dp"
                android:text="Change password"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/button_save"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>